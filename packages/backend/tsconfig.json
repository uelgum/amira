{
  "compilerOptions": {
    "target": "es6",
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "@controller/*": [ "./controller/*" ],
      "@events/*": [ "./events/*" ],
      "@middleware/*": [ "./middleware/*" ],
      "@models/*": [ "./models/*" ],
      "@routes/*": [ "./routes/*" ],
      "@schemas/*": [ "./schemas/*" ],
      "@services/*": [ "./services/*" ],
      "@structs/*": [ "./structs/*" ],
      "@utils/*": [ "./utils/*" ],
      "@config": [ "./config" ]
    },
    "esModuleInterop": true
  }
}