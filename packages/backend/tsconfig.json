{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "@controller/*": [ "./controller/*" ],
      "@middleware/*": [ "./middleware/*" ],
      "@models/*": [ "./models/*" ],
      "@routes/*": [ "./routes/*" ],
      "@schemas/*": [ "./schemas/*" ],
      "@services/*": [ "./services/*" ],
      "@structs/*": [ "./structs/*" ],
      "@utils/*": [ "./utils/*" ],
      "@config": [ "./config" ]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ],
    "esModuleInterop": true,
    "removeComments": true,
    "strict": true
  },
  "exclude": [
    "./node_modules",
    "./src/types"
  ]
}