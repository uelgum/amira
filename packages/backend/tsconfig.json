{
  "compilerOptions": {
    "target": "esnext",
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "@config": [ "./config" ],
      "@loaders/*": [ "./loaders/*" ],
      "@schemas/*": [ "./schemas/*" ]
    },
    "allowJs": true,
    "esModuleInterop": true,
    "noEmit": true,
    "strict": true
  },
  "include": [ "./src" ]
}