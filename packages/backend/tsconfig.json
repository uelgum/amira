{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "@config": [ "./config" ],
      "@api/*": [ "./api/*" ],
      "@loaders/*": [ "./loaders/*" ],
      "@models/*": [ "./models/*" ],
      "@schemas/*": [ "./schemas/*" ],
      "@services/*": [ "./services/*" ],
      "@utils/*": [ "./utils/*" ]
    },
    "allowJs": true,
    "esModuleInterop": true,
    "noEmit": true,
    "strict": true
  },
  "include": [ "./src" ]
}