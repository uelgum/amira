{
    "extends": "@tsconfig/svelte/tsconfig.json",
    "compilerOptions": {
        "baseUrl": "./src",
        "paths": {
            "@apps/*": [ "./apps/*" ],
            "@atoms/*": [ "./components/atoms/*" ],
            "@molecules/*": [ "./components/molecules/*" ],
            "@organisms/*": [ "./components/organisms/*" ],
            "@internal/*": [ "./internal/*" ],
            "@layouts/*": [ "./layouts/*" ],
            "@stores/*": [ "./stores/*" ],
            "@views/*": [ "./views/*" ]
        },
        "resolveJsonModule": true
    },
    "include": [
        "./src/**/*"
    ] 
}