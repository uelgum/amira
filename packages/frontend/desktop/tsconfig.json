{
    "extends": "@tsconfig/svelte/tsconfig.json",
    "compilerOptions": {
        "baseUrl": "./src",
        "paths": {
            "@apps/*": [ "./apps/*" ],
            "@components/*": [ "./components/*" ],
            "@internal/*": [ "./internal/*" ],
            "@stores/*": [ "./stores/*" ],
            "@views/*": [ "./views/*" ]
        },
        "resolveJsonModule": true
    },
    "include": [
        "./src/**/*"
    ] 
}